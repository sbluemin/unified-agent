{
  "name": "@sbluemin/unified-agent",
  "version": "1.0.0",
  "description": "Codex CLI, Claude Code, Gemini CLI, OpenCode CLI를 통합하는 TypeScript 기반 SDK",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "unified-agent",
    "agent",
    "cli",
    "acp",
    "mcp",
    "gemini",
    "claude",
    "codex",
    "opencode",
    "json-rpc"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {},
  "dependencies": {}
}
